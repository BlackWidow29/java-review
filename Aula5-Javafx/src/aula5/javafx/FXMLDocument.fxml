<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aula5.javafx.FXMLDocumentController">
   <children>
      <VBox alignment="CENTER" layoutX="6.0" prefHeight="214.0" prefWidth="312.0">
         <children>
            <Label fx:id="lblMensagem" text="Vai aparecer uma mensagem" textFill="RED">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="btnClick" mnemonicParsing="false" onAction="#handleButtonAction" text="Clique em mim">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
